<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@id/tv_timestamp"
        android:layout_gravity="center_horizontal"
        style="@style/ease_chat_text_date_style"
        android:layout_marginTop="@dimen/ease_message_time_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ease_message_row_margin_left"
        android:layout_marginRight="@dimen/ease_message_row_margin_right"
        android:layout_marginTop="@dimen/ease_message_row_margin_top">

        <com.hyphenate.easeui.module.base.widget.EaseImageView
            android:id="@id/iv_avatar"
            android:layout_width="@dimen/ease_message_avatar_size"
            android:layout_height="@dimen/ease_message_avatar_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ease_ic_portrait" />

        <LinearLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username"
            android:layout_marginLeft="@dimen/chat_bubble_margin_left"
            android:layout_toRightOf="@id/iv_avatar"
            android:background="@drawable/ease_bg_chatfrom">

            <TextView
                android:id="@+id/tv_location"
                style="@style/chat_content_date_style"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ease_location_msg"
                android:gravity="center|left"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@id/tv_username"
            style="@style/ease_chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ease_message_username_margin_left"
            android:layout_toRightOf="@id/iv_avatar"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>