<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@id/tv_timestamp"
        style="@style/ease_chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ease_message_time_margin_top"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ease_message_row_margin_left"
        android:layout_marginTop="@dimen/ease_message_row_margin_top"
        android:layout_marginRight="@dimen/ease_message_row_margin_right">

        <com.hyphenate.easeui.module.base.widget.EaseImageView
            android:id="@id/iv_avatar"
            android:layout_width="@dimen/ease_message_avatar_size"
            android:layout_height="@dimen/ease_message_avatar_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ease_ic_portrait" />

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username"
            android:layout_marginLeft="@dimen/chat_bubble_margin_left"
            android:layout_toRightOf="@id/iv_avatar">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:minHeight="90dp"
                android:scaleType="fitXY" />

        </RelativeLayout>

        <TextView
            android:id="@id/tv_username"
            style="@style/ease_chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/chat_nick_margin_left"
            android:layout_toRightOf="@id/iv_avatar"
            android:textSize="@dimen/chat_nick_text_size"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>