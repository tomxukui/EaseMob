<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="EaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0089e1</item>
        <item name="colorPrimaryDark">#0089e1</item>
        <item name="colorAccent">#0089e1</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EaseAppTheme.Dark">
        <item name="colorPrimaryDark">#000000</item>
    </style>

    <style name="EaseAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/ease_toolbar_menu</item>
    </style>

    <style name="EaseAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EaseToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">0dp</item>
        <item name="popupTheme">@style/EaseAppTheme.PopupOverlay</item>
        <item name="android:theme">@style/EaseAppTheme.AppBarOverlay</item>
        <item name="android:padding">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:minHeight">@dimen/ease_toolbar_minHeight</item>
        <item name="android:background">@color/ease_toolbar_background</item>
        <item name="navigationIcon">@mipmap/ease_toolbar_back</item>
        <item name="toolbar_title_textColor">@color/ease_toolbar_title</item>
        <item name="toolbar_title_textSize">@dimen/ease_toolbar_title_textSize</item>
        <item name="toolbar_subtitle_textColor">@color/ease_toolbar_subtitle</item>
        <item name="toolbar_subtitle_textSize">@dimen/ease_toolbar_subtitle_textSize</item>
    </style>

    <!--聊天时间样式-->
    <style name="ease_message_date_style">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">21dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ease_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/ease_bg_chat_text_date</item>
    </style>

    <!--聊天姓名样式-->
    <style name="ease_message_username_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--聊天文字内容样式-->
    <style name="ease_message_bubble_style">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:autoLink">web</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:maxWidth">225dp</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--聊天状态样式-->
    <style name="ease_message_bubble_status_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--聊天进度样式-->
    <style name="ease_message_bubble_progress_text_style">
        <item name="android:textColor">@color/ease_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--定位-->
    <style name="ease_message_location_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

</resources>