<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="EaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0089e1</item>
        <item name="colorPrimaryDark">#0089e1</item>
        <item name="colorAccent">#0089e1</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EaseAppTheme.Dark">
        <item name="colorPrimaryDark">#000000</item>
    </style>

    <style name="EaseAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">#ffffff</item>
    </style>

    <style name="EaseAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EaseToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">#0089e1</item>
        <item name="elevation">0dp</item>
        <item name="navigationIcon">@mipmap/ease_ic_back</item>
        <item name="android:textColor">#ffffff</item>
        <item name="popupTheme">@style/EaseAppTheme.PopupOverlay</item>
        <item name="android:theme">@style/EaseAppTheme.AppBarOverlay</item>
        <item name="android:textSize">18sp</item>
        <item name="toolbarLeftTextColor">#ffffff</item>
        <item name="toolbarLeftTextSize">14sp</item>
        <item name="android:padding">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/ease_timestampe_bg</item>
    </style>

    <!--
    <style name="horizontal_slide2" parent="android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimFade2</item>
    </style>
    -->


</resources>