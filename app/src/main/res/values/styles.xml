<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.PatientInquiry">
        <item name="colorPrimaryDark">#2693FF</item>
    </style>

    <style name="AppTheme.NoActionBar.DoctorInquiry">
        <item name="colorPrimaryDark">#FFFFFF</item>
    </style>

    <style name="MaskDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
